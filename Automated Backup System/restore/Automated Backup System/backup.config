cat > config/backup.config <<'EOF'
# backup.config - user-editable settings
BACKUP_DESTINATION="$PWD/../backups"    # relative to config file; change if needed
EXCLUDE_PATTERNS=".git,node_modules,.cache"
DAILY_KEEP=7
WEEKLY_KEEP=4
MONTHLY_KEEP=3
LOG_FILE="backup.log"     # stored inside BACKUP_DESTINATION
EMAIL_FILE="email.txt"    # stored inside reports/ (script will write to BACKUP_DESTINATION by default)
EOF